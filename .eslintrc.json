{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": false
    },
    "sourceType": "module"
  },
  "plugins": [],
  "extends": "standard",
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "eqeqeq": "error",
    "no-return-assign": "off",
    "no-var": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "yoda": "off",
    "arrow-spacing": "error",
    "dot-location": ["error", "property"],
    "prefer-arrow-callback": "error",
    "no-template-curly-in-string": "error"
  }
}